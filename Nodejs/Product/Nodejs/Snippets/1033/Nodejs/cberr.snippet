<?xml version="1.0" encoding="utf-8"?>
<CodeSnippets
    xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet">
  <CodeSnippet Format="1.0.0">
    <Header>
      <Title>cberr</Title>
      <Description>Code Snippet for an error handling callback function</Description>
      <Shortcut>cberr</Shortcut>
      <SnippetTypes>
        <SnippetType>Expansion</SnippetType>
      </SnippetTypes>
    </Header>
    <Snippet>
      <Declarations>
        <Literal>
          <ID>error</ID>
          <Default>error</Default>
        </Literal>
      </Declarations>
      <Code Language="Nodejs">
        <![CDATA[var hadError = function ($error$, response) {
    console.error($error$);
    response.end('Server Error');
};
]]>
      </Code>
    </Snippet>
  </CodeSnippet>
</CodeSnippets>
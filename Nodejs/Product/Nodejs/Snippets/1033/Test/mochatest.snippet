<?xml version="1.0" encoding="utf-8"?>
<CodeSnippets
    xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet">
  <CodeSnippet Format="1.0.0">
    <Header>
      <Title>mochatest</Title>
      <Description>Code Snippet for a Unit Test using Mochajs</Description>
      <Shortcut>mochatest</Shortcut>
      <SnippetTypes>
        <SnippetType>Expansion</SnippetType>
      </SnippetTypes>
    </Header>
    <Snippet>
      <Declarations>
        <Literal>
          <ID>myFunction</ID>
          <Default>myFunction</Default>
        </Literal>
        <Literal>
          <ID>message</ID>
          <Default>should work</Default>
        </Literal>
      </Declarations>
      <Code Language="Nodejs">
        <![CDATA[var assert = require("assert");
describe("myFunction", function () {
    it("should work", function () {
        $end$
    });
});
]]>
      </Code>
    </Snippet>
  </CodeSnippet>
</CodeSnippets>

